{% extends 'base.html.twig' %}

{% block body %}
    <main>
        <div class="blog">
            <section class="header_blog">
                <div class="container d-flex flex-column text-center justify-content-center align-items-center header_blog_content">
                    <h2>{% trans %}Anton Loginov Blog{% endtrans %}</h2>
                </div>
            </section>
            <div class="container">
                {% for article in pagination %}
                    <a href="{{ path('article_page_localized', {id:article.id}) }}">
                        <article id="{{ article.id }}" class="col-9 m-auto article-wrapper">
                            <div class="flexbox-wrapper">
                                <div class="article-title">
                                    <h2>{{ article.title }}</h2>
                                </div>
                                <div class="article-description">
                                    <p>{{ article.articleText|raw }}</p>
                                </div>
                                <div class="article-date">
                                    <span>{{ article.dateAdd|date('d.m.Y') }}</span>
                                </div>
                            </div>
                        </article>
                    </a>
                {% endfor %}
                <div class="navigation">
                    {{ knp_pagination_render(pagination) }}
                </div>
            </div>
        </div>
    </main>
{% endblock %}
{% block footer %}
{% endblock %}
